.logo{
  width: 200px;
  margin-bottom: 50px;
}
.login{
  display: flex;
  height: 50vh;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.container{
  width: 100%;
  height: 100%;
  position: relative;
}
.cover-image{
  width: 100%;
  height: 40vh;
}
.cover-image image{
  width: 100%;
  height: 100%;
}

.user-info{
  position: absolute;
  right: 10px;
  top: 190px;
}
.nick-name{
  padding: 0 5px 0 0;
}
.user-cover{
  width: 50px;
  height: 50px;
  border-radius: 5px;
}

.dynamic {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  margin-top: 50px;
}
.dynamic .item{
  display: flex;
  margin-bottom: 20px;
  margin-left: 10px;
}
.dynamic .item .right .content{
  width: 270px;
  overflow: hidden;
  text-overflow: ellipsis;
}
.dynamic .item .right{
  margin-left: 10px;
}
.dynamic .item .dynamic-cover{
  width: 70px;
  height: 70px;
}